---
- name: Start Apache
  hosts: ansibleclient

  tasks:
    - name: Apache installation
      apt: package=apache2 state=present

    - name: Apache configuration
      copy: path=/var/www/html/index.html content="This is my automated Webserver"
        

    - name: 
      file: path=/etc/apache2/ports.conf state=present regexp='Listen 80' line='Listen 81'
